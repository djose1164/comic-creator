#:kivy 1.11.1

# comiccreator.kv module
# Here is the main implemation.

# Root
<ComicCreator>:
    # AnchorLayout for toolbox.
    AnchorLayout:
        anchor_x: "left"
        anchor_y: "top"

        ToolBox:
            id: _tool_box
            drawing_space: _drawing_space
            comic_creator: root
            size_hint: None, None
            width: 100

    # AnchorLayout for the space that will be use or avaible for drawing.
    AnchorLayout:
        anchor_x: "right"
        anchor_y: "top"
        
        DrawingSpace:
            id: _drawing_space
            tool_box: _tool_box
            general_options: _general_options
            status_bar: _status_bar
            size_hint: None, None
            width: root.width - _tool_box.width
            height: root.height - _general_options.height - _status_bar.height

    # For the bottom panel.
    AnchorLayout:
        anchor_x: "center"
        anchor_y: "bottom"

        BoxLayout:
            orientation: "vertical"

            GeneralOptions:
                id: _general_options
                drawing_space: _drawing_space
                comic_creator: root
                size_hint: 1, None
                height: 48
            
            StatusBar:
                id: _status_bar
                size_hint: 1, None
                height: 24